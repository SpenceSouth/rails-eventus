<html>
<head>
	<style>
	table{
		border: 1px solid black;
		padding:0px;
		background-color: black;
	}
	td,th{
		padding: 5px 10px;
		margin: 0px;
		border:1px solid black;
		background-color: #444444;
		color: white;
	}
</style>
</head>

<body>

<%= link_to("<< Back to List", {:action => 'index'}, :class=> 'back-link') %>

<div class="Users new">
	<h2>Create New User</h2>

	<table summary="User from fields">
		<tr>
			<th>First Name</th>
			<td><%= @user.first_name %></td>
		</tr>
		<tr>
			<th>Last Name</th>
			<td><%= @user.last_name %></td>
		</tr>
		<tr>
			<th>Email</th>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<th>Password</th>
			<td><%= @user.password %></td>
		</tr>
		<tr>
			<th>Is Teacher</th>
			<td><%= @user.teacher %></td>
		</tr>
		<tr>
			<th>Image URL</th>
			<td><%= @user.image_url %></td>
		</tr>
	</table>

	<%= link_to("Edit", {:action => 'edit', :id => @user.id}) %>

	<%= link_to("Delete", {:action => 'delete', :id => @user.id}) %>
</div>
		
</body>
</html>
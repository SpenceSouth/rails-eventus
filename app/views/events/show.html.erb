<%= stylesheet_link_tag    'events', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'events', 'data-turbolinks-track' => true %>

<div class="row">
	<div id="room-column" class="col-md-3">
		<div id="room-list-header">
				<h2>Rooms</h2><!-- Button trigger modal -->
				<button id="add-room-button" type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal"/>
				<span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
		</div>
		<ul id="room-list" class="list-group">
			<% @rooms.each do |r| %>
				 <%= link_to r.id.to_s do %>
				<li class="list-group-item">
					<span class="glyphicon glyphicon-book">
					<%= r.name %>
				</li>
				<% end %>
			<% end %>
		</ul>
	</div>
	<div id="event-colum" class="col-md-9">
		<h2>Current Room: <%= @currentRoom.name %></h2>

		<ul>
			<lh>Approved Events for room</lh>
			<% @events.each do |e| %>
				<li><%= e.name %>
			<% end %>
		</ul>

		<ul>
			<lh>Events pending approval</lh>
			<% @pendingEvents.each do |e| %>
				<li><%= e.name %>
			<% end %>
		</ul>
	</div>
</div>



<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Add Room</h4>
      </div>
      <div class="modal-body">
				<div class="row">
				  <div class="col-md-6 col-md-offset-3">

						<form>
							<div class="modal-label">
						  Room name:
						  	<input type="text" name="roomname"/>
						  </div>

							<div class="modal-label">
						  Room number:
						  	<input type="text" name="roomname"/>
						  </div>

							<div class="modal-label">
								<span class="modal-time">
						  		Time Available:
							  	<input type="time" name="starttime"/>
							  	<input type="time" name="endtime"/>
								</span>
						  </div>

							<div class="modal-label">
						  Days:
						  	<input type="checkbox" name="day" value="S"> S </input>
						  	<input type="checkbox" name="day" value="M"> M </input>
						  	<input type="checkbox" name="day" value="T"> T </input>
						  	<input type="checkbox" name="day" value="W"> W </input>
						  	<input type="checkbox" name="day" value="R"> R </input>
						  	<input type="checkbox" name="day" value="F"> F </input>
						  	<input type="checkbox" name="day" value="S"> S </input>
						  </div>

							<div class="modal-label">
							Description:
									<textarea class="modal-description"></textarea>
							</div>

							<div class="modal-label">
							Category:
								<select>
								  <option value="club">Club</option>
								  <option value="faculty">Faculty</option>
								  <option value="class">Class</option>
								  <option value="study">Study</option>
								  <option value="other">Other</option>
								</select>
							</div>

							<div class="modal-label">
							Allow food:
								<input type="checkbox" name="food" value="food"></input>
							</div>

							<div class="modal-label">
							Has Projector:
								<input type="checkbox" name="projector" value="projector"></input>
							</div>

							<div class="modal-label">
							Capacity:
						  	<input type="text" name="capacity"/>
							</div>

						</form>

				  </div>
				</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<!-- Remove data-dismiss="model" to actually save -->
        <button type="button" class="btn btn-primary" data-dismiss="modal">Save changes</button>
      </div>
    </div>
  </div>
</div>

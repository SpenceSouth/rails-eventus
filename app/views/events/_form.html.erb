<div class="row">
  <div class="form-horizontal modal-label form-group ">
    <%= form_for(Event.new) do |f| %>
        <%= f.label :name, class: "col-sm-4 control-label" %>
        <%= f.text_field :name, class: "col-sm-8"  %>

        <%= f.label :start_time, class: "col-sm-4 control-label"  %>
        <%= f.time_select :start_time, class: "col-sm-8"  %>

        <%= f.label :end_time, class: "col-sm-4 control-label"  %>
        <%= f.time_select :end_time, class: "col-sm-8" %>

        <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>